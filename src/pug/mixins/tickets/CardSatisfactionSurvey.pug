include ../home/dashboard/Mixins

mixin CardSatisfactionSurvey
  .card&attributes(attributes)
    .card-header.d-flex.justify-content-between.align-items-center.bg-light.py-2
      h6.mb-0 Customer Satisfaction Survey
      +DashboardDropdown('dropdown-satisfaction-survey')
    .card-body.scrollbar
      .echart-satisfaction-survey(data-echart-responsive="true")
    .card-footer.bg-light.py-2.text-center
      a.btn.btn-link.btn-sm.fw-medium(href=`#!`)
        | View all
        span.fas.fa-chevron-right.ms-1.fs--2