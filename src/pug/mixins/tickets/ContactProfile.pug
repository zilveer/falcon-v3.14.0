        .col-md-6.col-xl-12.ps-md-4.ps-xl-0
          +InfoItem("Subscription", "Active")
          +InfoItem("OS", "macOS Monterey")
          +InfoItem("Browser", "Google Chrome 98.0.2563")
          +InfoItem("IP", "52.119.132.297")
