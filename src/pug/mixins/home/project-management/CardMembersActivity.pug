mixin ActivityRow(item)
  .row.g-2.mb-4
    .col-12.d-flex.align-items-center
      +Avatar({img: `${item.avatar}`, size: 'xl'}).rounded-circle
      h6.mb-0.ps-2 #{item.name}
    each activity,index in item.activity
      .col-4.position-relative
        img.w-100(src=`${CWD}assets/img/${activity.img}`, alt="...")
        .badge.rounded-pill.position-absolute.top-100.start-50.translate-middle(class = `badge-soft-${activity.color}`) #{activity.amount}