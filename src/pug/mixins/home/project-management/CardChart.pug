mixin CardReportForThisWeek
  .card&attributes(attributes)
    .card-header.pb-0
      .row.flex-between-center.g-card
        .col-auto
          h6.mb-0 Report for this week
        .col-auto.d-flex
          .btn.btn-sm.btn-text.d-flex.align-items-center.p-0.me-3.shadow-none#echart-bar-report-for-this-week-option-1
            span.fas.fa-circle.text-primary.fs--2.me-1
            span.text This Week 
          .btn.btn-sm.btn-text.d-flex.align-items-center.p-0.shadow-none#echart-bar-report-for-this-week-option-2
            span.fas.fa-circle.text-300.fs--2.me-1
            span.text Last Week
    .card-body.py-0
      // Find the JS file for the following chart at: src/js/charts/echarts/report-for-this-week.js
      // If you are not using gulp based workflow, you can find the transpiled code at: public/assets/js/theme.js
      .echart-bar-report-for-this-week(data-echart-responsive="true" data-chart={
        option1: 'echart-bar-report-for-this-week-option-1',
        option2: 'echart-bar-report-for-this-week-option-2'
      })     
    .card-footer.bg-light.p-0
      a.btn.btn-sm.btn-link.d-block.w-100.py-2(href=`#!`) See all projects
        span.fas.fa-chevron-right.ms-1.fs--2