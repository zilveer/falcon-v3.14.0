mixin CardRunningProject
  .card&attributes(attributes)#runningProjectTable(data-list!={
    valueNames: ["projects", "worked", "time", "date"],
  })
    .card-header 
      h6.mb-0 Running Projects
    .card-body.p-0
      .scrollbar
        table.table.mb-0.table-borderless.fs--2.border-200.overflow-hidden.table-running-project
          thead.bg-light
            tr.text-800
              th.sort(data-sort="projects") Projects
              th.sort(data-sort="time") Progress
              th.sort.text-center(data-sort="worked")  Worked
              th.sort.text-center(data-sort="date") Due Date
              th.text-end Members
          tbody.list
            each project, index in runningProjects
              +ProjectItem(project, index)
    .card-footer.bg-light.py-0.text-center
      a.btn.btn-sm.btn-link.py-2(href=`#!`) Show All Projects
        span.fas.fa-chevron-right.ms-1.fs--2

mixin ProjectItem(project, index)
  tr
    td
      +RunningProjectsProject(project)
    td.align-middle
      .progress.rounded-3.worked(style="height: 6px;")
        .progress-bar.bg-progress-gradient.rounded-pill(role='progressbar' style=`width: ${project.progressbarWidth}%` aria-valuenow='43.72' aria-valuemin='0' aria-valuemax='100')
    td.align-middle.text-center.time
      p.fs--1.mb-0.fw-semi-bold #{project.time}
    td.align-middle.text-center.date
      p.fs--1.mb-0.fw-semi-bold #{project.date}
    td
      .avatar-group.justify-content-end
        each member in project.members
          +Avatar(member).border.border-3.border-light.rounded-circle

mixin RunningProjectsProject(config)
  .d-flex.align-items-center.position-relative
    +Avatar(config.avatar)
    .flex-1.ms-3
      h6.mb-0.fw-semi-bold
        a(href=`${CWD}pages/user/profile.html`).stretched-link.text-900=config.name
      p.text-500.fs--2.mb-0=config.role