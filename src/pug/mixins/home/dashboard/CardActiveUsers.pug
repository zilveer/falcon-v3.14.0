mixin ActiveUser(config)
  .d-flex.align-items-center.position-relative&attributes(attributes)
    +Avatar(config.avatar)
    .flex-1.ms-3
      h6.mb-0.fw-semi-bold
        a(href=`${CWD}pages/user/profile.html`).stretched-link.text-900=config.name
      p.text-500.fs--2.mb-0=config.role

mixin CardActiveUsers(config)
  - var config = Object.assign({start: 0, end: 5}, config)
  .card&attributes(attributes)
    .card-header.d-flex.flex-between-center.bg-light.py-2
      h6.mb-0 Active Users
      +DashboardDropdown('dropdown-active-user')
    .card-body.py-2
      each user, index in users.slice(config.start, config.end)
        +ActiveUser(user)(class=`${index !== config.end - 1 && 'mb-3'}`)
    .card-footer.bg-light.p-0
      a.btn.btn-sm.btn-link.d-block.w-100.py-2(href=`${CWD}${paths['followers']}`) All active users
        span.fas.fa-chevron-right.ms-1.fs--2

