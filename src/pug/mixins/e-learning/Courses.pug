  -
    const slugifyText = (str) => str.toLowerCase()
      .replace(/\s+/g, '-')   
      .replace(/[\u0300-\u036f]/g, "")
      .replace(/--+/g, '-')  
      .replace(/^-+/, '')      
      .replace(/-+$/, '');

  aside.scrollbar-overlay.font-sans-serif.p-4.p-xl-3.ps-xl-0(class="offcanvas offcanvas-start offcanvas-filter-sidebar" tabindex="-1" id="filterOffcanvas" aria-labelledby="filterOffcanvasLabel")
