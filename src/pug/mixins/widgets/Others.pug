  +WidgetSectionTitle({
    transform: 'shrink-2',
    icon: 'fas fa-folder-plus',
    title: 'Others',
    subtitle: `Get more awesome cards for showing your different types of content..`
  }).mb-4.mt-6

  .row.g-3.mb-3
    .col-xxl-8.d-flex.flex-column.align-items-stretched
      +BillingPageHeader
      +CardDipositeStatus.mb-3
      +EventCreateFooter.mb-3
      +BirthdayNotification
