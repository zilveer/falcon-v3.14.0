        .col-lg-4.col-xl-12
          +CardWeatherUpdate.h-100
        .col-lg-5.col-xl-12
          +CardStorageSpaceStatus
        .col-lg-3.col-xl-12
          .card.h-100
            +Background({
              image: `${CWD}assets/img/icons/spot-illustrations/corner-4.png`, 
              className:"d-none d-xl-block bg-card",
              attrs: {
                style: 'opacity: 0.7'
              }
            })
            .card-body
              h5 Order Details: #2737
              p.fs--1 April 21, 2019, 5:33 PM
              div
                strong.me-2 Status: 
                .badge.rounded-pill.badge-soft-success.fs--2 Completed
                  span.fas.fa-check.ms-1(data-fa-transform="shrink-2")
    .col-xl-7.col-xxl-8
      +CardWorldMap({title: 'Project Locations'})
  
  .row.g-3.mb-3
    .col-lg-8
      +CardCalendarManagement.h-100
