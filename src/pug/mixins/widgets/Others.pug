      +DoMoreCard.h-100
  .row.g-3.mb-3
    .col-lg-6
      +CardTeamProgress
    .col-lg-6
      +CardFalconRoadMapDiscussion.h-100
  .row.g-3.mb-3
    .col-lg-6
      +LayoutAuthBasicCard.h-100
        +LogOutContent.text-center
    .col-lg-6
      +LayoutAuthBasicCard
        +ConfirmMailContent.text-center
  