          button.btn.btn-falcon-default.btn-sm.dropdown-toggle.ms-2.dropdown-caret-none(type='button' data-bs-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
            span.fas.fa-ellipsis-h
          .dropdown-menu
            a.dropdown-item(href='#') Edit
            a.dropdown-item(href='#') Report
            a.dropdown-item(href='#') Archive
            .dropdown-divider
