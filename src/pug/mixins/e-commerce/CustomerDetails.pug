mixin CustomerDetailsHeader
  .card.mb-3
    .card-header
      .row
        .col
          h5.mb-2 Tony Robbins (
            a(href="mailto:tony@gmail.com") tony@gmail.com
            | )
          a.btn.btn-falcon-default.btn-sm(href="#!")
            span.fas.fa-plus.fs--2.me-1
