mixin Badge(badge)
  span.badge.badge.rounded-pill.d-block(class=`badge-soft-${badge.type}`)=badge.content
    span.ms-1(class=badge.icon data-fa-transform="shrink-2")

mixin Dropdown(id)
  .dropdown.font-sans-serif.position-static
    button.btn.btn-link.text-600.btn-sm.dropdown-toggle.btn-reveal&attributes(attributes)(type='button' id=id data-bs-toggle="dropdown" data-boundary="viewport" aria-haspopup="true" aria-expanded="false")
      span.fas.fa-ellipsis-h.fs--1
    .dropdown-menu.dropdown-menu-end.border.py-0(aria-labelledby=id)
      .py-2
        a(href='#!').dropdown-item Completed
        a(href='#!').dropdown-item Processing
        a(href='#!').dropdown-item On Hold
        a(href='#!').dropdown-item Pending
        .dropdown-divider
        a(href='#!').dropdown-item.text-danger Delete

mixin Order(order, index)          
  tr.btn-reveal-trigger
    td(style="width: 28px;").align-middle
      .form-check.fs-0.mb-0.d-flex.align-items-center
        input.form-check-input(
          type='checkbox' 
          id=`checkbox-${index}`
          data-bulk-select-row
        ) 
    td.order.py-2.align-middle.white-space-nowrap
      a(href=`${CWD}${paths['order-details']}`) 
        strong=order.id 
      |  by 
      strong=order.name
      br 
      a(href=`mailto:${order.email}`)=order.email
    td.date.py-2.align-middle=order.date
    td.address.py-2.align-middle.white-space-nowrap=order.address
      p.mb-0.text-500=order.shippingType
    td.status.py-2.align-middle.text-center.fs-0.white-space-nowrap
      +Badge(order.status)
    td.amount.py-2.align-middle.text-end.fs-0.fw-medium=order.amount
    td.py-2.align-middle.white-space-nowrap.text-end
      +Dropdown(`order-dropdown-${index}`)

mixin Orders
  .card.mb-3#ordersTable&attributes(attributes)(data-list!={
    valueNames: ["order", "date", "address", "status", "amount"],
    page: 10,
    pagination: true
  })
    .card-header
      .row.flex-between-center
        .col-4.col-sm-auto.d-flex.align-items-center.pe-0
          h5.fs-0.mb-0.text-nowrap.py-2.py-xl-0 Orders

        .col-8.col-sm-auto.ms-auto.text-end.ps-0
          #orders-bulk-actions.d-none
            .d-flex
              select.form-select.form-select-sm(aria-label='Bulk actions')
                option(selected='') Bulk actions
                option(value='Refund') Refund
                option(value='Delete') Delete
                option(value='Archive') Archive
              button.btn.btn-falcon-default.btn-sm.ms-2(type='button') Apply
          #orders-actions
            button(type='button').btn.btn-falcon-default.btn-sm
              span.fas.fa-plus(data-fa-transform="shrink-3 down-2")
              span.d-none.d-sm-inline-block.ms-1 New
            button(type='button').btn.btn-falcon-default.btn-sm.mx-2
              span.fas.fa-filter(data-fa-transform="shrink-3 down-2")
              span.d-none.d-sm-inline-block.ms-1 Filter
            button(type='button').btn.btn-falcon-default.btn-sm
              span.fas.fa-external-link-alt(data-fa-transform="shrink-3 down-2")
              span.d-none.d-sm-inline-block.ms-1 Export
    .card-body.p-0
      .table-responsive.scrollbar
        table.table.table-sm.table-striped.fs--1.mb-0.overflow-hidden
          thead.bg-200.text-900
            tr
              th
                .form-check.fs-0.mb-0.d-flex.align-items-center
                  input.form-check-input#checkbox-bulk-customers-select(
                    type='checkbox'
                    data-bulk-select!={
                      body: "table-orders-body",
                      actions: "orders-bulk-actions",
                      replacedElement: "orders-actions"
                    }
                  )
              th.sort.pe-1.align-middle.white-space-nowrap(data-sort="order") Order
              th.sort.pe-1.align-middle.white-space-nowrap(data-sort="date").pe-7 Date
              th.sort.pe-1.align-middle.white-space-nowrap(data-sort="address" style="min-width: 12.5rem;") Ship To
              th.sort.pe-1.align-middle.white-space-nowrap(data-sort="status").text-center Status
              th.sort.pe-1.align-middle.white-space-nowrap(data-sort="amount").text-end Amount
              th.no-sort
          tbody.list#table-orders-body
            each order, index in orders
              +Order(order, index)
    .card-footer
      .d-flex.align-items-center.justify-content-center
        button(type='button' title="Previous" data-list-pagination='prev').btn.btn-sm.btn-falcon-default.me-1
          span.fas.fa-chevron-left
        ul.pagination.mb-0
        button(type='button' title="Next" data-list-pagination='next').btn.btn-sm.btn-falcon-default.ms-1
          span.fas.fa-chevron-right              
