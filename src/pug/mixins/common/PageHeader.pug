mixin PageHeader(config)
  .card.mb-3
    +Background({image: `${CWD}assets/img/icons/spot-illustrations/corner-4.png`, className: "d-none d-lg-block bg-card"})
    .card-body.position-relative
      .row
        .col-lg-8
          if config.title
            h3(class=config.headerClass && config.headerClass data-anchor=config.dataAnchor)=config.title
          if config.description
            p.mb-0!=config.description
          block
          if config.url
            a(href=config.url target='_blank').btn.btn-link.btn-sm.ps-0.mt-2=config.linkText
              span.fas.fa-chevron-right.ms-1.fs--2
