mixin createPost
  .card&attributes(attributes)
    .card-header.bg-light.overflow-hidden
      .d-flex.align-items-center
        +Avatar({img: 'team/1.jpg', size: 'm'})
        .flex-1.ms-2
          h5.mb-0.fs-0 Create post
    .card-body.p-0
      form
        textarea.shadow-none.form-control.border-0.rounded-0.resize-none.px-x1(placeholder="What do you want to talk about?" rows='4')
        .d-flex.align-items-center.border-y.px-x1.mt-1
          label(for='hash-tags').text-nowrap.mb-0.me-2
            span.fas.fa-plus.me-1.fs--2
            span.fw-medium.fs--1 Add hashtag
          input.form-control.border-0.fs--1.shadow-none#hash-tags(type="text" placeholder="Help the right person to see")

        .row.g-0.justify-content-between.mt-3.px-x1.pb-3
          .col
            button.btn.btn-light.btn-sm.rounded-pill.shadow-none.d-inline-flex.align-items-center.fs--1.mb-0.me-1(type='button')
              img.cursor-pointer(src=`${CWD}assets/img/icons/spot-illustrations/image.svg` width=17 alt="")
              span.ms-2.d-none.d-md-inline-block Image
            button.btn.btn-light.btn-sm.rounded-pill.shadow-none.d-inline-flex.align-items-center.fs--1.me-1(type='button')
              img.cursor-pointer(src=`${CWD}assets/img/icons/spot-illustrations/calendar.svg` width=17 alt="")
              span.ms-2.d-none.d-md-inline-block Event
            button.btn.btn-light.btn-sm.rounded-pill.shadow-none.d-inline-flex.align-items-center.fs--1.me-1(type='button')
              img.cursor-pointer(src=`${CWD}assets/img/icons/spot-illustrations/location.svg` width=17 alt="")
              span.ms-2.d-none.d-md-inline-block.text-nowrap Check in
          .col-auto
            .dropdown.d-inline-block.me-1
              button#dropdownMenuButton.btn.btn-sm.dropdown-toggle.px-1(type='button' data-bs-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                span.fas.fa-globe-americas
              .dropdown-menu.dropdown-menu-end(aria-labelledby='dropdownMenuButton')
                a.dropdown-item(href='#') Public
                a.dropdown-item(href='#') Private
                a.dropdown-item(href='#') Draft
            button.btn.btn-primary.btn-sm.px-4.px-sm-5(type='submit') Share

mixin postCog(id)
  .dropdown.font-sans-serif
    button.btn.btn-sm.dropdown-toggle.p-1.dropdown-caret-none(type='button' id=id data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
      span.fas.fa-ellipsis-h.fs--1
    .dropdown-menu.dropdown-menu-end.py-3(aria-labelledby=id)
      a(href='#!').dropdown-item View
      a(href='#!').dropdown-item Edit
      a(href='#!').dropdown-item Report
      .dropdown-divider
      a(href='#!').dropdown-item.text-warning Archive
      a(href='#!').dropdown-item.text-danger Delete          

mixin postHeader(avatar, sub, auth)
  - var avatarConfig = Object.assign({size: '2xl'}, avatar)
  .d-flex
    +Avatar(avatar)
    .flex-1.align-self-center.ms-2
      block
      p.mb-0.fs--1!=sub
        span(class=`${auth ? auth : 'fas fa-globe-americas'}`)

mixin postAction(config)
  - var config = Object.assign({like: false, comment: false}, config)
  .card-footer.bg-light.pt-0
    if(config.like || config.comment)
      .border-bottom.border-200.fs--1.py-3
        if(config.like)
          a(href='#!').text-700 345 Likes
        if(config.comment && config.like)
          |  &bull; 
        if(config.comment)
          a(href='#!').text-700 34 Comments
    .row.g-0.fw-semi-bold.text-center.py-2.fs--1
      .col-auto
        a.rounded-1.d-flex.align-items-center.me-3(href='#!' class=`${config.like ? '' : 'text-700'}`)
          img(src=`${CWD}assets/img/icons/spot-illustrations/like-${config.like ? 'active': 'inactive'}.png` width=20 alt="")
          span.ms-1 Like
      .col-auto
        a.rounded-1.d-flex.align-items-center.me-3(href='#!' class=`${config.comment ? '' : 'text-700'}`)
          img(src=`${CWD}assets/img/icons/spot-illustrations/comment-${config.comment ? 'active': 'inactive'}.png` width=20 alt="")
          span.ms-1 Comment
      .col-auto.d-flex.align-items-center
        a.rounded-1.text-700.d-flex.align-items-center(href='#!')
          img(src=`${CWD}assets/img/icons/spot-illustrations/share-inactive.png` width=20 alt="")
          span.ms-1 Share
    form.d-flex.align-items-center.border-top.border-200.pt-3
      +Avatar({img: 'team/3.jpg', size: 'xl'})
      input.form-control.rounded-pill.ms-2.fs--1(type='text' placeholder='Write a comment...')

    if(config.comment)
      .d-flex.mt-3
        +Avatar({img: 'team/4.jpg', size: 'xl'})
        .flex-1.ms-2.fs--1
          p.mb-1.bg-200.rounded-3.p-2
