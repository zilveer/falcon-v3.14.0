block component
  .row.mt-5
    .col-lg-6.col-xl-12.col-xxl-6.h-100
      +WidgetSectionTitle({
        icon: 'fas fa-spinner',
        title: 'Progress tab',
        subtitle: 'You can easily show your stats content by using these cards.'
      }).mb-4
      .card.theme-wizard.mb-5
        .card-header.bg-light.pt-3.pb-2
          +WizardHeader({tab1:'#bootstrap-wizard-tab1',tab2:'#bootstrap-wizard-tab2',tab3:'#bootstrap-wizard-tab3',tab4:'#bootstrap-wizard-tab4'})
        .card-body.py-4
          +WizardContent({name: 'bootstrap-wizard', tab1:'bootstrap-wizard-tab1',tab2:'bootstrap-wizard-tab2',tab3:'bootstrap-wizard-tab3',tab4:'bootstrap-wizard-tab4',validation:false,url:`${CWD}${paths['forms-wizard']}`})
        .card-footer.bg-light
          +WizardPager

    
    .col-lg-6.col-xl-12.col-xxl-6.h-100
      +WidgetSectionTitle({
        icon: 'fas fa-check-double',
        title: 'With Validation',
        subtitle: 'You can easily show your stats content by using these cards.'
      }).mb-4
      .card.theme-wizard.h-100.mb-5
        .card-header.bg-light.pt-3.pb-2
          +WizardHeader({tab1:'#bootstrap-wizard-validation-tab1',tab2:'#bootstrap-wizard-validation-tab2',tab3:'#bootstrap-wizard-validation-tab3',tab4:'#bootstrap-wizard-validation-tab4'})
        .card-body.py-4#wizard-controller
          +WizardContent({name: 'bootstrap-wizard-validation', tab1:'bootstrap-wizard-validation-tab1',tab2:'bootstrap-wizard-validation-tab2',tab3:'bootstrap-wizard-validation-tab3',tab4:'bootstrap-wizard-validation-tab4',validation:true,url:`${CWD}${paths['forms-wizard']}`})
        .card-footer.bg-light
          +WizardPager

    #error-modal.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
      .modal-dialog.modal-dialog-centered(role="document" style="max-width: 400px")
        .modal-content.position-relative.p-5
          +ErrorModalContent


  .row.mt-5.mt-lg-0.mt-xl-5.mt-xxl-0
    .col-lg-6.col-xl-12.col-xxl-6.h-100
      +WidgetSectionTitle({
        icon: 'fas fa-tasks',
        title: 'With progressbar',
        subtitle: 'You can easily show your stats content by using these cards.'
      }).mb-4
