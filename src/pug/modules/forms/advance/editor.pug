extends ../../../layouts/LayoutComponent

block prepend scripts
  script(src=`${CWD}vendors/tinymce/tinymce.min.js`)

block append variables
  

block append content
  +PageHeader({title: 'Editor'})
    p.mt-2 #{name} uses Tinymce, the world's most popular JavaScript library for rich text editing.
    a(href='https://www.tiny.cloud/docs/quick-start/' target='_blank').btn.btn-link.ps-0.btn-sm  Tinymce documentations
      span.fas.fa-chevron-right.ms-1.fs--2

  
  +ComponentCard({
    title: 'Example',
    anchor: true,
  }).mb-3
    .min-vh-50
      = '\n'
      textarea.tinymce.d-none(name='content')
      = '\n'
      
  .card.mb-3
    .card-header
      h5.mb-0 Javascript
    .card-body.bg-light   
      +ComponentCardLib
        script(src=`vendors/tinymce/tinymce.min.js`)
