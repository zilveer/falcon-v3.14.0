extends ../../../layouts/LayoutTheme
include ../../../mixins/e-commerce/Mixins
         

prepend styles
  link(href=`${CWD}vendors/swiper/swiper-bundle.min.css`, rel='stylesheet')

prepend scripts
  script(src=`${CWD}vendors/swiper/swiper-bundle.min.js`)
  script(src=`${CWD}vendors/rater-js/index.js`)

append content
  .card.mb-3
    .card-body
      .row
        .col-lg-6.mb-4.mb-lg-0

          .product-slider#galleryTop
            .swiper-container.theme-slider.position-lg-absolute.all-0(data-swiper!={
              autoHeight:true,
              spaceBetween: 5,
              loop: true, 
              loopedSlides: 5,
              thumb: {
                spaceBetween: 5,
                slidesPerView: 5,
                loop: true,
                freeMode: true,
                grabCursor: true,
                loopedSlides: 5, 
                centeredSlides: true,
                slideToClickedSlide: true,
                watchSlidesVisibility: true,
                watchSlidesProgress: true,
                parent: '#galleryTop'
              },
              slideToClickedSlide: true,
            })

              .swiper-wrapper.h-100
                .swiper-slide.h-100
                  img(src=`${CWD}assets/img/products/1.jpg` alt="").rounded-1.fit-cover.h-100.w-100
                .swiper-slide.h-100
                  img(src=`${CWD}assets/img/products/1-2.jpg` alt="").rounded-1.fit-cover.h-100.w-100
                .swiper-slide.h-100  
                  img(src=`${CWD}assets/img/products/1-3.jpg` alt="").rounded-1.fit-cover.h-100.w-100
                .swiper-slide.h-100  
                  img(src=`${CWD}assets/img/products/1-4.jpg` alt="").rounded-1.fit-cover.h-100.w-100
                .swiper-slide.h-100  
                  img(src=`${CWD}assets/img/products/1-5.jpg` alt="").rounded-1.fit-cover.h-100.w-100 
                .swiper-slide.h-100  
                  img(src=`${CWD}assets/img/products/1-6.jpg` alt="").rounded-1.fit-cover.h-100.w-100  
              .swiper-nav
                .swiper-button-next.swiper-button-white
                .swiper-button-prev.swiper-button-white

        .col-lg-6
          h5 Apple MacBook Pro (15" Retina, Touch Bar, 2.2GHz 6-Core Intel Core i7, 16GB RAM, 256GB SSD) - Space Gray (Latest Model)
          a(href="#!").fs--1.mb-2.d-block Computer &amp; Accessories
          .fs--2.mb-3.d-inline-block.text-decoration-none
            +Review(4.5)
            span.ms-1.text-600 (8)
          p.fs--1 Testing conducted by Apple in October 2018 using pre-production 2.9GHz 6‚Äëcore Intel Core i9‚Äëbased 15-inch MacBook Pro systems with Radeon Pro Vega 20 graphics, and shipping 2.9GHz 6‚Äëcore Intel Core i9‚Äëbased 15‚Äëinch MacBook Pro systems with Radeon Pro 560X graphics, both configured with 32GB of RAM and 4TB SSD.
          h4.d-flex.align-items-center
            span.text-warning.me-2 $1200
            span.me-1.fs--1.text-500
              del.me-1 $2400
              strong -50%
          p.fs--1.mb-1 
            span Shipping Cost: 
            strong $50
          p.fs--1 Stock: 
            strong.text-success Available
          p.fs--1.mb-3 Tags: 
            a(href="#!").ms-2 Computer,
            a(href="#!").ms-1 Mac Book,
            a(href="#!").ms-1 Mac Book Pro,
            a(href="#!").ms-1 Laptop    
          .row
            .col-auto.pe-0
              .input-group.input-group-sm(data-quantity)
                button.btn.btn-sm.btn-outline-secondary.border-300(data-field="input-quantity" data-type="minus") -
                input.form-control.text-center.input-quantity.input-spin-none(type='number' min="0" value="0" aria-label='Amount (to the nearest dollar)' style="max-width: 50px")
                button.btn.btn-sm.btn-outline-secondary.border-300(data-field="input-quantity" data-type="plus") +
            .col-auto.px-2.px-md-3
              a(href="#!").btn.btn-sm.btn-primary
                span.fas.fa-cart-plus.me-sm-2
                span.d-none.d-sm-inline-block Add To Cart
            .col-auto.px-0
              a(href="#!" data-bs-toggle="tooltip" data-bs-placement="top" title="Add to Wish List").btn.btn-sm.btn-outline-danger.border-300
                span.far.fa-heart.me-1
                | 282
      .row
        .col-12
          .overflow-hidden.mt-4
            ul#myTab.nav.nav-tabs(role='tablist')
              li.nav-item
                a#description-tab.nav-link.active.ps-0(data-bs-toggle='tab' href='#tab-description' role='tab' aria-controls='tab-description' aria-selected='true') Description
              li.nav-item
                a#specifications-tab.nav-link.px-2.px-md-3(data-bs-toggle='tab' href='#tab-specifications' role='tab' aria-controls='tab-specifications' aria-selected='false') Specifications
              li.nav-item
                a#reviews-tab.nav-link.px-2.px-md-3(data-bs-toggle='tab' href='#tab-reviews' role='tab' aria-controls='tab-reviews' aria-selected='false') Reviews
            #myTabContent.tab-content
              #tab-description.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='description-tab') 
