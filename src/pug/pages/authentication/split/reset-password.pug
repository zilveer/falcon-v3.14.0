extends ../../../layouts/LayoutSplit
include ../../../mixins/authentication/PasswordResetForm

block append variables
  - var background = { image: `${CWD}assets/img/generic/20.jpg` }

block splitContent
  h3.text-center Reset password
  +PasswordResetForm({
    password: {
      label: 'New Password',
      attrs:{ id: 'split-reset-password' }
    },
    confirmPassword: {
      label: 'Confirm Password',
      attrs:{ id: 'split-reset-confirm-password' }
    }
  }).mt-3
